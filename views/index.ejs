<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <link rel="stylesheet" href="styles/main.css">
    <title>Volunteer Network</title>
</head>

<body>

    <div class="vh-100 w-100 position-relative">
        <h1 class="title-main position-absolute mt-3 pt-3 start-50 translate-middle-x">Be a Volunteer</h1>
        <section class="main-wrapper d-flex justify-content-center align-items-center vh-100 w-100">
            <div class="inner-wrapper w-75 position-relative d-flex flex-column overflow-hidden rounded">
                <!-- Form Container -->
                <div class="form-container w-100 px-5 d-flex z-3">
                    <form action="/addVolunteer" method="post" class="form-wrapper mt-5 ms-2">
                        <div class="row">
                            <div class="col px-1">
                                <input type="text" class="form-control mt-2" name="fname" placeholder="First Name"
                                    aria-label="First Name">
                                <input type="email" class="form-control mt-2" name="email" placeholder="Email Address"
                                    aria-label="Email">
                                <textarea type="text" class="form-control mt-2" name="skills" placeholder="Skills"
                                    aria-label="Skills"></textarea>
                            </div>
                            <div class="col px-1">
                                <input type="text" class="form-control mt-2" name="lname" placeholder="Last Name"
                                    aria-label="Last Name">
                                <input type="number" class="form-control mt-2" name="contact"
                                    placeholder="Contact Number" aria-label="Contact">
                            </div>
                            <div class="col-12 mt-3 px-1">
                                <button type="submit" class="btn btn-submit">Submit</button>
                            </div>
                        </div>
                    </form>
                    <img src="./assets/img-main.png" class="z-n1" alt="">
                </div>

                <div class="m-3 z-3">
                    <h2 class="heading">
                        Volunteers
                    </h2>
                    <hr />

                    <div class="card-container overflow-y-auto z-3">
                        <row>
                            <div class="grid">
                                <% volunteers.forEach((data)=>{ %>
                                    <div class="g-col-12 g-col-xxl-4 g-col-lg-6 g-col-md-12 g-col-sm-12 g-col-xs-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <div>
                                                    <h5 class="card-title text-capitalize">
                                                        Volunteer: <%=data.volunteer%>
                                                    </h5>
                                                    <hr />
                                                    <p class="card-text">
                                                        Email: <%=data.email%>
                                                            <br />
                                                            Contact: <%=data.contact%>
                                                                <br />
                                                                Skills: <%=data.skills%>
                                                    </p>
                                                </div>
                                                <div class="d-flex mt-3 gap-2 justify-content-end">
                                                    <a href="/editVolunteer/<%=data.id%>"
                                                        class="btn btn-warning">Edit</a>
                                                    <a href="/deleteVolunteer/<%=data.id%>"
                                                        class="btn btn-primary">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                        </row>
                    </div>
                </div>
            </div>
        </section>
    </div>

</body>

</html>